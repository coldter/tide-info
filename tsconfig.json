{
  "compilerOptions": {
    "strict": true,
    "strictNullChecks": true,
    "jsx": "react-jsx",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["vite/client", "react", "react-dom"],
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["apps/web/src/*"]
    }
  },
  "references": [
    { "path": "apps/web" },
    { "path": "apps/server" }
  ]
}
